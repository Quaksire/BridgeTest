<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:bottom="5dp"
                android:left="10dp" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:top="-2dp"
                android:right="2dp"
                android:bottom="2dp"
                android:left="-2dp" />
            <solid android:color="@color/card_shadow_1_disabled" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="-2dp"
                android:right="2dp"
                android:bottom="2dp"
                android:left="-2dp" />
            <solid android:color="@color/card_shadow_2_diabled" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/card_background" />
            <corners android:radius="2dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>